<%= form_tag '/article_comments', remote: true, method: :post, id: "comment_answer" do %>
  <%= text_field_tag :comment, '', placeholder: "Type Answer"%>
  <%= hidden_field_tag :article_comment_id, params[:article_comment_id]%>
  <%= button_tag 'Submit reply', class: 'btn btn-primary',
                   data: { disable_with: "<i class='fa fa-refresh fa-spin'>
	</i> Submitting Changes..."} %>
<%end%>
